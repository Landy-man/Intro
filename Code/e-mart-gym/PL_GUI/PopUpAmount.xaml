<Window x:Class="PL_GUI.PopUpAmount" Title="Please choose the Amount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="100" Width="300">
    <Grid>
        <StackPanel Name="stkP" Background="DarkOrange">
            <Label Content="Please Enter Amount Of Products"/>
            <TextBox Name="txtBlock" Text="Enter HERE" GotFocus="txtBlock_GotFocus"/>
            <Button Name="AddToCart" Content="OK" Click="AddToCart_Click"/>
        </StackPanel>
    </Grid>
</Window>
